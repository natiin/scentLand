<% layout('layouts/boilerplate') %>
    <div class="container mb-3">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 parent">
                <h4 class="text-center mb-5">Your shopping cart:</h2>
                    <% if(products && products.length>0){ %>
                        <% for(let product of products ) {%>
                            <div class="row g-1 mb-4 product" id="<%=product.id%>">
                                <div class="col-6">
                                    <div>
                                        <p class="m-0"><span class="fw-bolder">
                                        <a class="link-secondary text-decoration-none" href="/products/<%=product.id%>"><%= product.brand %></span> <%= product.title %> <span class="size"><%=product.size%>ml</span>
                                        </p><img class="cart-product-img m-0" src='<%= product.image%>'></a>
                                    </div>
                                </div>
                                <div class="col-4 d-flex">
                                    <div class="align-self-start">
                                        <button class="btn btn-outline-danger btn-sm delete-item">DELETE</button>
                                        <button class="btn btn-outline-success btn-sm update-item">UPDATE</button>
                                    </div>
                                    <div class="ms-1" style="width: 3rem;">
                                        <label for="qty" class="d-block"></label>
                                        <input class="form-control form-control-sm qty" type="number" id="qty" min="1" name="qty[]" value="<%=product.qty%>">
                                    </div>
                                </div>
                                <div class="col-2">
                                    <p class="text-end product-price">£<%=product.price%></p>
                                </div>
                            </div>
                            <%}%>
                                <% }else{%>
                                    <p class="text-center">Your shopping cart is empty</p>
                                    <p class="text-center fs-2"><i class="bi bi-cart-x"></i></p>
                                    <% } %>
                                    <% if(products && products.length){ %>
                                        <hr>
                                        <p class="text-end fw-bolder totals">total: £<%=totals%></p>
                                        <button class="btn btn-outline-secondary float-end" id="checkout">CHECKOUT</button>

                                     <% } %>
            </div>
        </div>
    </div>


    <script src="/JS/updateCart.js"></script>
    <script src="/JS/checkout.js"></script>
   
   